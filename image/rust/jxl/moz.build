if CONFIG["COMPILE_ENVIRONMENT"]:
    # Generate C++ header from Rust FFI using cbindgen
    CbindgenHeader(
        "jxl_decoder_ffi.h",
        inputs=["/image/rust/jxl"],
    )

    # Export the generated header
    EXPORTS.mozilla.image += [
        "!jxl_decoder_ffi.h",
    ]
